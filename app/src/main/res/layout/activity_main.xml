<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home"
    tools:context="com.techgig.MainActivity">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Clogin"
        android:layout_alignStart="@+id/Clogin"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:layout_gravity="center_horizontal"
        android:text="LOGIN AS CUSTOMER"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:id="@+id/Clogin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:layout_gravity="center_horizontal"
        android:text="LOGIN AS MERCHANT"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:id="@+id/Mlogin"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Clogin"
        android:layout_alignLeft="@+id/Clogin"
        android:layout_alignStart="@+id/Clogin"/>


</RelativeLayout>
